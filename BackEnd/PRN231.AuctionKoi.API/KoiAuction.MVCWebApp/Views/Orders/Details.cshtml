            User Name
        </dt>
        <dd class="col-sm-10">
            @{
                var userList = ViewData["UserId"] as SelectList;
                var userName = string.Empty;

                if (userList != null && Model.UserId != null)
                {
                    userName = userList.FirstOrDefault(x => x.Value == Model.UserId.ToString())?.Text ?? "User not found";
                }
            }
            @userName
        </dd>
