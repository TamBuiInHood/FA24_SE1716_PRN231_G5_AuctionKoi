@model KoiAuction.BussinessModels.Order.OrderModel

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>

<div style="max-width: 900px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h4 style="border-bottom: 2px solid #007bff; padding-bottom: 10px;">Order Information</h4>
    <dl class="row" style="margin-top: 20px;">

        <div class="col-sm-6">
            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.OrderCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OrderCode)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.Vat)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vat)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.TotalProduct)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TotalProduct)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OrderDate)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.TaxCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TaxCode)
            </dd>
        </div>

        <div class="col-sm-6">
            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShippingAddress)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeliveryDate)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Note)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.ShippingCost)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShippingCost)
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.ShippingMethod)
            </dt>
            <dd>
                @if (Model.ShippingMethod == "1")
                {
                @:Bình thường
                }
              else if (Model.ShippingMethod == "2")
                {
                @:Nhanh
                }   
 
            </dd>

            <dt style="font-weight: bold;">
                @Html.DisplayNameFor(model => model.Discount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Discount)
            </dd>

            <dt style="font-weight: bold;">
                User Name
            </dt>
            <dd>
                @{
                    var userList = ViewData["UserId"] as SelectList;
                    var userName = string.Empty;

                    if (userList != null && Model.UserId != null)
                    {
                        userName = userList.FirstOrDefault(x => x.Value == Model.UserId.ToString())?.Text ?? "User not found";
                    }
                }
                @userName
            </dd>
        </div>

    </dl>
</div>

<div style="text-align: center; margin-top: 30px;">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.OrderId" style="margin-right: 10px;">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
