                <select asp-for="FishTypeId" class ="form-control" asp-items="ViewBag.FishTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Farm.FarmName" class="control-label"></label>
                <select asp-for="FarmId" class ="form-control" asp-items="ViewBag.FarmId"></select>
