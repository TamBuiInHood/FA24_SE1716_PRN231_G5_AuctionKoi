@model KoiAuction.BussinessModels.PaymentModels.PaymentModel

@{
    ViewData["Title"] = "Edit Payment";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="PaymentId" />

            <div class="form-group mb-3">
                <label asp-for="PaymentAmount" class="form-label"></label>
                <input asp-for="PaymentAmount" class="form-control" placeholder="Enter payment amount" />
                <span asp-validation-for="PaymentAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaymentDate" class="form-label"></label>
                <input asp-for="PaymentDate" class="form-control" placeholder="Select payment date" type="date" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control" placeholder="Enter payment status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaymentMethod" class="form-label"></label>
                <input asp-for="PaymentMethod" class="form-control" placeholder="Enter payment method" />
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TransactionId" class="form-label"></label>
                <input asp-for="TransactionId" class="form-control" placeholder="Enter transaction ID" />
                <span asp-validation-for="TransactionId" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="OrderId" class="form-label"></label>
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId">
                    <option value="">Select Order</option>
                </select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}