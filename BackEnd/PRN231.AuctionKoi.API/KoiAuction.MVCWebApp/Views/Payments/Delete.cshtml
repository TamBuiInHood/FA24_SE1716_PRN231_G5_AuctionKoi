@model KoiAuction.BussinessModels.PaymentModels.PaymentModel
@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete Payment</h1>

    <div class="alert alert-warning mt-4" role="alert">
        <h3 class="text-center">Are you sure you want to delete this payment?</h3>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary mb-3">Payment Information</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PaymentAmount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentAmount) USD
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentDate)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == "Completed" ? "badge-success" : "badge-warning")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentMethod)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.TransactionId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TransactionId)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Order ID
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderId)
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PaymentId" />
                <button type="submit" onclick="confirm('Are you want to delete this payment')" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>

            <a class="btn btn-secondary btn-sm" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
