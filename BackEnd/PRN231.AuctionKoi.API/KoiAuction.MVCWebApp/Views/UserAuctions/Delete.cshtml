@model KoiAuction.BussinessModels.UserAuctionModels.UserAuctionModel
@{
    ViewData["Title"] = "Delete User Auction";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete User Auction</h1>

    <div class="alert alert-warning mt-4" role="alert">
        <h3 class="text-center">Are you sure you want to delete this user auction?</h3>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary mb-3">User Auction Information</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.BidCode)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BidCode)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Price) USD
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.IsWinner)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsWinner)
                </dd>

                <dt class="col-sm-3 font-weight-bold fs-5">
                    User
                </dt>
                <dd class="col-sm-9 fs-18">
                    @Html.DisplayFor(model => model.UserCode) - @Html.DisplayFor(model => model.FullName) (@Html.DisplayFor(model => model.Mail))
                </dd>

                <dt class="col-sm-3 font-weight-bold fs-5">
                    Fish
                </dt>
                <dd class="col-sm-9 fs-18">
                    @Html.DisplayFor(model => model.FishCode) - @Html.DisplayFor(model => model.FishName) (@Html.DisplayFor(model => model.FishTypeName))
                </dd>

                <dt class="col-sm-3 font-weight-bold fs-5">
                    Auction
                </dt>
                <dd class="col-sm-9 fs-18">
                    @Html.DisplayFor(model => model.AuctionCode) (Farm: @Html.DisplayFor(model => model.FarmName))
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" name="id" asp-for="BidId" />
                <button type="submit" onclick="confirm('Are you want to delete this user auction')" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>

            <a class="btn btn-secondary btn-sm" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
