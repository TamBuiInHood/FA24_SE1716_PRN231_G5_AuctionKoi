@model KoiAuction.BussinessModels.UserAuctionModels.UserAuctionModel

@{
    ViewData["Title"] = "Create User Auction";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Create User Auction</h1>

    <h4 class="text-primary mt-4">User Auction Details</h4>
    <hr />

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Price" class="font-weight-bold"></label>
                    <input asp-for="Price" type="number" class="form-control" required/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreateDate" class="font-weight-bold"></label>
                    <input asp-for="CreateDate" readonly class="form-control" type="text" value="@ViewData["CreateDate"]" />
                     @* <span asp-validation-for="CreateDate" class="text-danger"></span> *@
                </div>

                <div class="form-group">
                    <label asp-for="IsWinner" class="font-weight-bold"></label>
                    <select asp-for="IsWinner" class="form-control">
                        <option value="false">False</option>
                        <option value="true">True</option>
                    </select>
                    <span asp-validation-for="IsWinner" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FishId" class="control-label"></label>
                    <select asp-for="FishId" class="form-control" asp-items="ViewBag.FishId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="AuctionId" class="control-label"></label>
                    <select asp-for="AuctionId" class="form-control" asp-items="ViewBag.AuctionId"></select>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-success btn-lg btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

