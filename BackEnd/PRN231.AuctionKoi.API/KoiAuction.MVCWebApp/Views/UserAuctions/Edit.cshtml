@model KoiAuction.BussinessModels.UserAuctionModels.UserAuctionModel

@{
    ViewData["Title"] = "Edit User Auction";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="BidId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="FishId" />
            <input type="hidden" asp-for="AuctionId" />

            <div class="row">
                <!-- Cột thứ nhất -->
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="BidCode" class="form-label font-weight-bold"></label>
                        <input asp-for="BidCode" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label font-weight-bold"></label>
                        <input asp-for="Price" class="form-control" placeholder="Enter new bid price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CreateDate" class="form-label font-weight-bold"></label>
                        <input asp-for="CreateDate" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="IsWinner" class="form-label font-weight-bold"></label>
                        <select asp-for="IsWinner" class="form-control">
                            <option value="false">False</option>
                            <option value="true">True</option>
                        </select>
                        <span asp-validation-for="IsWinner" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cột thứ hai -->
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="UserCode" class="form-label font-weight-bold"></label>
                        <input asp-for="UserCode" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label font-weight-bold"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Mail" class="form-label font-weight-bold"></label>
                        <input asp-for="Mail" class="form-control" readonly />
                    </div>
                </div>

                <!-- Cột thứ ba -->
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="FishCode" class="form-label font-weight-bold"></label>
                        <input asp-for="FishCode" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FishName" class="form-label font-weight-bold"></label>
                        <input asp-for="FishName" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AuctionCode" class="form-label font-weight-bold"></label>
                        <input asp-for="AuctionCode" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FarmName" class="form-label font-weight-bold"></label>
                        <input asp-for="FarmName" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
