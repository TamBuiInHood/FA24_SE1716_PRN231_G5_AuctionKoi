@model IEnumerable<KoiAuction.Repository.Entities.Auction>

@{
    ViewData["Title"] = "Index";
}

<h1>Auctions</h1>

 

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">AuctionName</th>
                    <th class="card-title text-center">AuctionDate</th>
                    <th class="card-title text-center">StartTime</th>
                    <th class="card-title text-center">EndTime</th>
                    <th class="card-title text-center">Status</th>
                    <th class="card-title text-center">Description</th>
                    <th class="card-title text-center">CreateDate</th>
                    <th class="card-title text-center">AutionMethod</th>
                    <th class="card-title text-center">AuctionCode</th>
                    <th class="card-title text-center">Type</th>
                    <th class="card-title text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="tblAuctions">
                <!-- Auction data will be populated here by JavaScript -->
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
    $(document).ready(function () {
    loadAuctions();
});

function loadAuctions() {
    $.ajax({
                url: 'https://localhost:7094/api/Auction?pageIndex=1&pageSize=10', 
        type: "GET",
        contentType: "application/json;charset=utf-8",
        dataType: "json",
        success: function (result) {
            var html = '';
            // Notice the correction here, accessing the "list" inside the data object
            $.each(result.data.list, function (key, item) {
                html += '<tr>';
                html += '<td>' + item.auctionName + '</td>';
                html += '<td>' + new Date(item.auctionDate).toLocaleDateString() + '</td>';
                html += '<td>' + new Date(item.startTime).toLocaleTimeString() + '</td>';
                html += '<td>' + new Date(item.endTime).toLocaleTimeString() + '</td>';
                html += '<td>' + item.status + '</td>';
                html += '<td>' + item.description + '</td>';
                html += '<td>' + new Date(item.createDate).toLocaleDateString() + '</td>';
                html += '<td>' + item.autionMethod + '</td>';
                html += '<td>' + item.auctionCode + '</td>';
                html += '<td>' + (item.type ? item.type.typeName : 'No Type') + '</td>';
                html += '<td>';
                html += '<a href="/Auctions/Edit/' + item.auctionId + '">Edit</a> | ';
                html += '<a href="/Auctions/Details/' + item.auctionId + '">Details</a> | ';
                html += '<a href="/Auctions/Delete/' + item.auctionId + '">Delete</a>';
                html += '</td>';
                html += '</tr>';
            });
            $('.tblAuctions').html(html);
        },
        error: function (xhr, error) {
            alert("Error fetching auction data: " + xhr.statusText);
        }
    });
}

    </script>
}
